#!/bin/bash

function die {
  echo "ERROR: $1"
  exit 1
}
instances=(<%= @ip_addresses.join(' ') %>)
instance_num=1
for i in ${instances[@]};do
  echo "================ Starting Restart $instance_num of ${#instances[@]} ================"
  sudo -u <%= @user %> ssh <%= @user %>@$i <%= @app_restart_command %> || die "**************** RESTART FAILED ON $i ****************"
  echo "================ Finished Restart $instance_num of ${#instances[@]} ================"
  ((instance_num++))
done
